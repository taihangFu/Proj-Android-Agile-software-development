<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_successful"
    android:background="#607D8B"
    >


        <include android:id="@+id/app_bar"
            layout="@layout/app_bar"
            />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:id="@+id/spinner"
        android:layout_below="@+id/app_bar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="68dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expense Report"
        android:id="@+id/btnExpenseReport"
        android:layout_alignTop="@+id/btnIncomeReport"
        android:layout_alignEnd="@+id/textView18" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Income Report"
        android:id="@+id/btnIncomeReport"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="30dp"
        android:text="Choose account to view report"
        android:id="@+id/textView18"
        android:layout_below="@+id/app_bar"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        android:name="comp4920.pudgetplanner.navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer"></fragment>

</android.support.v4.widget.DrawerLayout>



